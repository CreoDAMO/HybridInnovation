[[workflows.workflow]]
name = "Spiral-System-Fixed"
author = 44812907
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "tsx server/index.ts"

