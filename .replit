args = "Spiral-Frontend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Spiral-Backend"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "tsx server/index.ts"

[[workflows.workflow]]
name = "Spiral-Frontend"
author = 44812907
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 3000

[[workflows.workflow]]
name = "Spiral-Backend"
author = 44812907
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "tsx server/index.ts"
